#!/bin/bash

set -euo pipefail

#####################################################
# This algorithm is implemented in the scikit-learn
# software package (http://scikit-learn.org/stable/).
#####################################################

trainingFilePath="$1"
testFilePath="$2"
classOptions="$3"
numCores="$4"

python3 AlgorithmScripts/Helper/sklearn_c_generic.py "$trainingFilePath" "$testFilePath" "$classOptions" "$numCores" "clf = AdaBoostClassifier(base_estimator=DecisionTreeClassifier(), n_estimators=1000, learning_rate=1.0, algorithm='SAMME.R', random_state=R_SEED)" 2>&1 | python3 AlgorithmScripts/Helper/ReformatSklearnOutput.py $classOptions
