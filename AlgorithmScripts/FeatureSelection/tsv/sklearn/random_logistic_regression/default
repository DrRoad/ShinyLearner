#!/bin/bash

set -euo pipefail

#####################################################
# This algorithm is implemented in the scikit-learn
# software package (http://scikit-learn.org/stable/).
#####################################################

dataFilePath="$1"

python AlgorithmScripts/Helper/sklearn_f_generic.py "$dataFilePath" "from sklearn.linear_model import RandomizedLogisticRegression; scorer = RandomizedLogisticRegression(random_state=R_SEED); scorer.fit(train_X, train_y); rankedFeatures = [y[1] for y in sorted(zip(map(lambda x: round(x, 4), scorer.scores_), features), reverse=True)]" 2>&1 | python AlgorithmScripts/Helper/ReformatSklearnOutput.py
