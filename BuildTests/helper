#!/bin/bash

set -o errexit

analysisType=$1
validationType=$2
dataFile=$3
description=$4
classifAlgo=$5
useDefaultParameters=$6
debug=$7

outputDir=/tmp/BuildTestOutput

rm -rfv $outputDir
mkdir -p $outputDir

if [[ "$validationType" == "montecarlo" ]]
then
  /UserScripts/${analysisType}_${validationType} "$dataFile" $description 2 2 $debug "$classifAlgo" $useDefaultParameters $outputDir/Predictions.tsv $outputDir/Metrics.tsv $outputDir/Benchmark.tsv $outputDir/Nested_Predictions.tsv $outputDir/Nested_Metrics.tsv $outputDir/Nested_Benchmark.tsv
else
  /UserScripts/${analysisType}_${validationType} "$dataFile" $description 2 2 2 $debug "$classifAlgo" $useDefaultParameters $outputDir/Predictions.tsv $outputDir/Metrics.tsv $outputDir/Benchmark.tsv $outputDir/Nested_Predictions.tsv $outputDir/Nested_Metrics.tsv $outputDir/Nested_Benchmark.tsv
fi
