#!/bin/bash

set -o errexit

dataFiles="$1"
description="$2"
outerNumIterations="$3"
innerNumIterations="$4"
debug="$5"
classifAlgos="$6"
outPredictionsFile="$7"
outMetricsFile="$8"
outBenchmarkFile="$9"
outNestedPredictionsFile="${10}"
outNestedMetricsFile="${11}"
outNestedBenchmarkFile="${12}"

scripts/nestedclassification "$dataFiles" "$description" "$outerNumIterations" "$innerNumIterations" "$debug" "$classifAlgos" "$outPredictionsFile" "$outMetricsFile" "$outBenchmarkFile" "$outNestedPredictionsFile" "$outNestedMetricsFile" "$outNestedBenchmarkFile" montecarlo 0
